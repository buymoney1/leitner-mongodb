// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --- مدل‌های مربوط به NextAuth.js ---

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum ReviewTimePreference {
  MORNING
  AFTERNOON
  EVENING
  NIGHT
}

model User {
  id                       String                @id @default(auto()) @map("_id") @db.ObjectId
  name                     String?
  email                    String?               @unique
  emailVerified            DateTime?
  image                    String?
  accounts                 Account[]
  sessions                 Session[]
  learningGoal             String?
  targetScore              Float?
  suggestedReviewTime      ReviewTimePreference?
  isOnboardingComplete     Boolean               @default(false)
  lastReviewNotificationAt DateTime?
  books                    Book[]
  cards                    Card[]
  reviews                  Review[]

  // اضافه کردن رابطه‌های جدید
  podcasts Podcast[]
  articles Article[]
  songs    Song[] // اضافه کردن رابطه با Song

uploadedVideos Video[] 
  activityTrackings ActivityTracking[]

  // اضافه کردن رابطه با DailyActivity
  dailyActivities DailyActivity[]

  notes Note[]

  mediaFiles MediaFile[] 

  // === اضافه کردن Notification Settings ===
  notificationToken   String? // توکن push notification
  notificationEnabled Boolean   @default(true) // فعال بودن نوتیفیکیشن
  lastNotificationAt  DateTime? // آخرین زمان دریافت نوتیفیکیشن

  // === اضافه کردن روابط Notification ===
  notificationLogs  NotificationLog[] // رابطه با NotificationLog
  pushSubscriptions PushSubscription[] // رابطه با PushSubscription

  role      String   @default("user") // user | admin
  hasPurchasedPackage Boolean @default(false)
    packageMonths      Int?  
  packageExpiryDate  DateTime? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- مدل اصلاح شده VerificationToken ---
model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime

  // به جای @@id از @@unique استفاده می‌کنیم
  @@unique([identifier, token])
}

// --- مدل‌های جدید برای سیستم فلش‌کارت ---

model Book {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards  Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  front          String
  back           String
  hint           String?
  boxNumber      Int      @default(1)
  lastReviewedAt DateTime @default(now())
  nextReviewAt   DateTime @default(now())

  bookId  String?  @db.ObjectId
  book    Book?    @relation(fields: [bookId], references: [id], onDelete: Cascade)
  userId  String?  @db.ObjectId
  user    User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  isCorrect Boolean

  cardId String @db.ObjectId
  card   Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum VideoLevel {
  A1
  A2
  B1
  B2
  C1
  C2
}

model Video {
  id           String            @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  videoUrl     String? // اختیاری برای فیلم‌های فصل‌بندی شده
  thumbnailUrl String?
  coverImage   String? // بنر اصلی فیلم
  level        VideoLevel
  subtitlesVtt String?
  
  // فصل‌های فیلم
  seasons      Season[]
  
  // لغات عمومی فیلم
  vocabularies VideoVocabulary[]
  

  isSeries     Boolean           @default(false) // آیا سریال است یا تک فیلم
  totalSeasons Int              @default(1)
  totalEpisodes Int             @default(1)
  releaseYear  Int?
  rating       Float?           @default(0)
  duration     Int?             // مدت زمان کل (دقیقه)
  
  // رابطه با DailyActivity
  dailyActivities DailyActivity[]
  
  // رابطه‌های سیستمی
 createdById  String?           @db.ObjectId
  createdBy    User?             @relation(fields: [createdById], references: [id])
  isPublished  Boolean           @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Season {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  seasonNumber Int      // شماره فصل
  title       String   // عنوان فصل
  description String?
  thumbnailUrl String?
  releaseDate DateTime?
  
  videoId    String   @db.ObjectId
  video      Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  episodes   Episode[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([videoId, seasonNumber])
}

model Episode {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  episodeNumber Int      // شماره قسمت
  title       String   // عنوان قسمت
  description String?
  videoUrl    String   // لینک ویدیوی قسمت
  thumbnailUrl String?
  duration    Int      // مدت زمان به ثانیه
  
  seasonId    String   @db.ObjectId
  season      Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  
  // لغات مخصوص این قسمت
  vocabularies EpisodeVocabulary[]
  
  // زیرنویس مخصوص این قسمت
  subtitlesVtt String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([seasonId, episodeNumber])
}

model EpisodeVocabulary {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  episodeId String  @db.ObjectId
  episode   Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  word      String
  meaning   String
}

model VideoVocabulary {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  videoId String  @db.ObjectId
  video   Video   @relation(fields: [videoId], references: [id], onDelete: Cascade)
  word    String
  meaning String
}

enum ContentLevel {
  A1
  A2
  B1
  B2
  C1
  C2
}

model Podcast {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  audioUrl     String
  coverUrl     String?
  duration     Int? // مدت زمان به ثانیه
  level        ContentLevel
  transcript   String?
  vocabularies PodcastVocabulary[]
  isPublished  Boolean             @default(false)
  createdById  String?             @db.ObjectId
  createdBy    User?               @relation(fields: [createdById], references: [id])

  // اضافه کردن رابطه با DailyActivity
  dailyActivities DailyActivity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PodcastVocabulary {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  podcastId String  @db.ObjectId
  podcast   Podcast @relation(fields: [podcastId], references: [id], onDelete: Cascade)
  word      String
  meaning   String
  timestamp Int? // زمان در ثانیه که لغت گفته شده
}

model Article {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  content      String
  excerpt      String?
  coverUrl     String?
  level        ContentLevel
  readingTime  Int? // زمان مطالعه به دقیقه
  vocabularies ArticleVocabulary[]
  isPublished  Boolean             @default(false)
  createdById  String?             @db.ObjectId
  createdBy    User?               @relation(fields: [createdById], references: [id])

  // اضافه کردن رابطه با DailyActivity
  dailyActivities DailyActivity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ArticleVocabulary {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  articleId String  @db.ObjectId
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  word      String
  meaning   String
  paragraph Int? // پاراگراف مربوطه
}

// --- مدل جدید برای فعالیت‌های روزانه (Planner) ---
model DailyActivity {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  date DateTime

  // فعالیت‌های روزانه
  videoWatched    Boolean @default(false)
  podcastListened Boolean @default(false)
  wordsReviewed   Boolean @default(false)
  articleRead     Boolean @default(false)
  songListened    Boolean @default(false) // اضافه کردن آهنگ

  // محتوای انجام شده (اختیاری)
  videoId String? @db.ObjectId
  video   Video?  @relation(fields: [videoId], references: [id])

  podcastId String?  @db.ObjectId
  podcast   Podcast? @relation(fields: [podcastId], references: [id])

  articleId String?  @db.ObjectId
  article   Article? @relation(fields: [articleId], references: [id])

  songId String? @db.ObjectId // اضافه کردن آهنگ
  song   Song?   @relation(fields: [songId], references: [id]) // اضافه کردن آهنگ

  // پیشرفت کلی
  progress Float @default(0) // 0-100

  // متادیتا
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model ActivityTracking {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  activityType String // video, podcast, article, words, song (اضافه کردن song)
  contentId    String?   @db.ObjectId // آیدی محتوای خاص (برای video/podcast/article/song)
  duration     Int // مدت زمان به ثانیه
  pathname     String? // مسیر کامل صفحه (مثال: /video/123)
  isRegistered Boolean   @default(false) // آیا در DailyActivity ثبت شده یا نه
  registeredAt DateTime? // زمان ثبت در DailyActivity

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([activityType])
  @@index([createdAt])
  @@index([isRegistered])
  @@index([userId, isRegistered])
}

// --- مدل جدید برای آهنگ‌ها (Songs) ---
model Song {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  artist      String
  album       String?
  duration    Int // مدت زمان به ثانیه
  audioUrl    String // لینک فایل صوتی
  coverUrl    String? // لینک کاور آهنگ
  lyrics      String // متن آهنگ با ترجمه (یک خط انگلیسی، یک خط فارسی)
  isPublished Boolean @default(false)
  createdById String? @db.ObjectId
  createdBy   User?   @relation(fields: [createdById], references: [id])

  // اضافه کردن رابطه با DailyActivity
  dailyActivities DailyActivity[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@index([artist])
  @@index([createdById])
}

// === اضافه کردن مدل‌های Notification ===

model NotificationLog {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title String
  body  String
  type  String @default("reminder") // reminder, alert, info

  // وضعیت ارسال
  status String   @default("sent") // sent, failed, pending
  sentAt DateTime @default(now())

  // اطلاعات Push
  pushToken String?
  error     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([sentAt])
  @@index([status])
  @@index([type])
}

// مدل برای ذخیره توکن‌های push
model PushSubscription {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // اطلاعات subscription
  endpoint String
  keys     Json // { p256dh: string, auth: string }

  // زمان‌ها
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([endpoint])
  @@index([userId])
}

// اضافه کردن مدل Note به انتهای فایل Prisma schema (قبل از آخرین } نیست)

model Note {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // هایلایت‌ها به صورت JSON ذخیره می‌شوند
  highlights Json?   @db.Json // آرایه‌ای از { text: string, start: number, end: number, color: string }
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}


model MediaFile {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  fileName        String   @unique
  originalName    String
  fileType        String   // video, audio, image, document
  mimeType        String   // video/mp4, audio/mp3, image/jpeg, etc
  fileSize        Int      // حجم به بایت
  fileSizeMB      Float    // حجم به مگابایت
  
  // لینک‌های پارس‌پک
  storageKey      String   // کلید اصلی در پارس‌پک
  publicUrl       String?  // لینک عمومی
  signedUrl       String?  // لینک موقت
  urlExpiresAt    DateTime? // زمان انقضای لینک موقت
  
  // تنظیمات دسترسی
  isPublic        Boolean  @default(false)
  accessLevel     String   @default("private")
  
  // متادیتای فایل
  duration        Int?     // مدت زمان (ثانیه)
  dimensions      String?  // ابعاد تصاویر
  resolution      String?  // رزولوشن ویدیو
  
  // اطلاعات آپلود
  uploaderId      String?  @db.ObjectId
  uploader        User?    @relation(fields: [uploaderId], references: [id])
  
  // تگ‌ها و دسته‌بندی
  tags            String[]
  category        String?
  
  // آمار
  views           Int      @default(0)
  downloads       Int      @default(0)
  
  // اطلاعات زمانی
  lastAccessedAt  DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([fileType])
  @@index([isPublic])
  @@index([uploaderId])
  @@index([createdAt])
  @@index([tags])
}

